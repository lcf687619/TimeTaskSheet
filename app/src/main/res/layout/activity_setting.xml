<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/myschedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <include
        android:id="@+id/setting_head"
        layout="@layout/activity_setting_head" />

    <com.mission.schedule.utils.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/setting_head"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp" >

            <View
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="0.5dp"
                android:background="@color/left_view" />

            <RelativeLayout
                android:id="@+id/re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/view"
                android:background="#ffffff" >

                <TextView
                    android:id="@+id/personmessage_tv"
                    style="@style/setpersontext"
                    android:layout_width="fill_parent"
                    android:drawableLeft="@mipmap/set_yonghu"
                    android:gravity="center_vertical"
                    android:text="个人信息" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/personmessage_tv"
                    android:layout_marginLeft="50dp"
                    android:background="@color/left_view" />

                <TextView
                    android:id="@+id/setbackground_tv"
                    style="@style/setpersontext"
                    android:layout_width="fill_parent"
                    android:layout_below="@+id/view1"
                    android:drawableLeft="@mipmap/set_pifu"
                    android:gravity="center_vertical"
                    android:text="更换背景" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/setbackground_tv"
                    android:background="@color/left_view" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re"
                android:layout_marginTop="30dp"
                android:background="@color/white" >

                <View
                    android:id="@+id/view20"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/left_view" />

                <RelativeLayout
                    android:id="@+id/rl1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view20" >

                    <TextView
                        style="@style/setpersontext"
                        android:drawableLeft="@mipmap/set_lingsheng"
                        android:gravity="center_vertical"
                        android:text="默认铃声" />

                    <TextView
                        android:id="@+id/ringname_tv"
                        style="@style/setpersontext"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        android:gravity="center_vertical"
                        android:text="完成任务"
                        android:textColor="@color/sunday_txt" />
                </RelativeLayout>

                <View
                    android:id="@+id/view22"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/rl1"
                    android:layout_marginLeft="50dp"
                    android:background="@color/left_view" />

                <TextView
                    android:id="@+id/morenbeforetime_tv"
                    style="@style/setpersontext"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/view22"
                    android:drawableLeft="@mipmap/set_tiqian"
                    android:gravity="center_vertical"
                    android:text="默认提前提醒时间" />

                <View
                    android:id="@+id/view23"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/morenbeforetime_tv"
                    android:layout_marginLeft="50dp"
                    android:background="@color/left_view" />

                <TextView
                    android:id="@+id/everydaywenhou_tv"
                    style="@style/setpersontext"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/view23"
                    android:drawableLeft="@mipmap/set_wenhou"
                    android:gravity="center_vertical"
                    android:text="每天问候" />

                <View
                    android:id="@+id/view24"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/everydaywenhou_tv"
                    android:layout_marginLeft="50dp"
                    android:background="@color/left_view" />

                <TextView
                    android:id="@+id/alldaytixing_tv"
                    style="@style/setpersontext"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/view24"
                    android:drawableLeft="@mipmap/set_quantian"
                    android:gravity="center_vertical"
                    android:text="“全天”的提醒时间" />

                <View
                    android:id="@+id/view25"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/alldaytixing_tv"
                    android:layout_marginLeft="50dp"
                    android:background="@color/left_view" />

                <TextView
                    android:id="@+id/setendsound_tv"
                    style="@style/setpersontext"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/view25"
                    android:drawableLeft="@mipmap/chosed"
                    android:gravity="center_vertical"
                    android:text="设为结束的音效" />

                <View
                    android:id="@+id/view26"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/setendsound_tv"
                    android:layout_marginLeft="50dp"
                    android:background="@color/left_view" />

                <TextView
                    android:id="@+id/updatedata_tv"
                    style="@style/setpersontext"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/view26"
                    android:drawableLeft="@mipmap/set_date"
                    android:gravity="center_vertical"
                    android:text="迁移数据" />

                <View
                    android:id="@+id/view27"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/updatedata_tv"
                    android:layout_marginLeft="50dp"
                    android:background="@color/left_view" />

                <RelativeLayout
                    android:id="@+id/notifiation_rl"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_below="@id/view27"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:drawableLeft="@mipmap/set_timesheet"
                        android:drawablePadding="15dp"
                        android:gravity="center"
                        android:text="状态栏图标"
                        android:textColor="@color/setting_text_color"
                        android:textSize="17sp" />

                    <ToggleButton
                        android:id="@+id/toggle_notifation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginRight="10dp"
                        android:background="@android:color/transparent"
                        android:button="@drawable/ios7_btn"
                        android:checked="true"
                        android:text=""
                        android:textOff=""
                        android:textOn="" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@id/notifiation_rl"
                    android:background="@color/left_view" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/re2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/re1"
                android:layout_marginTop="30dp"
                android:background="@color/white" >

                <TextView
                    android:id="@+id/yijianfankui_tv"
                    style="@style/setpersontext"
                    android:layout_width="match_parent"
                    android:drawableLeft="@mipmap/left_zhongyao"
                    android:gravity="center_vertical"
                    android:text="意见反馈" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/yijianfankui_tv"
                    android:layout_marginLeft="50dp"
                    android:background="@color/left_view" />

                <TextView
                    android:id="@+id/haoping_tv"
                    style="@style/setpersontext"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/view4"
                    android:drawableLeft="@mipmap/set_pingjia"
                    android:gravity="center_vertical"
                    android:text="亲,给个好评吧" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/haoping_tv"
                    android:layout_marginLeft="50dp"
                    android:background="@color/left_view" />

                <TextView
                    android:id="@+id/aboutus_tv"
                    style="@style/setpersontext"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/view5"
                    android:drawableLeft="@mipmap/set_guanyu"
                    android:gravity="center_vertical"
                    android:text="关于我们" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/aboutus_tv"
                    android:background="@color/left_view" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_below="@id/re2"
                android:background="@color/bg_color" />
        </RelativeLayout>
    </com.mission.schedule.utils.ReboundScrollView>

</RelativeLayout>