<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head"
        android:layout_marginTop="60dp"
        android:background="@color/white">

        <View
            android:id="@+id/phone_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/newresgin_line_color" />

        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/phone_view"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/newlogin_telephone_color"
                android:textSize="@dimen/phone_textsize" />

            <EditText
                android:id="@+id/phone_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text"
                android:background="@null"
                android:hint="请输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:padding="5dp"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textColorHint="@color/newresgin_hintcolor"
                android:textSize="@dimen/phone_textsize" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/newresgin_line_color" />

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="验证码"
                android:textColor="@color/newlogin_telephone_color"
                android:textSize="@dimen/phone_textsize" />

            <EditText
                android:id="@+id/yanzheng_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                android:layout_toLeftOf="@+id/yanzheng_bt"
                android:layout_toRightOf="@+id/text1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textColorHint="@color/newresgin_hintcolor"
                android:textSize="@dimen/phone_textsize" />

            <Button
                android:id="@+id/yanzheng_bt"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/bg_newresgin_unsend"
                android:gravity="center"
                android:text="获取验证码"
                android:textColor="@color/newresgin_hintcolor"
                android:textSize="13sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/newresgin_line_color" />

        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view2"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="密    码"
                android:textColor="@color/newlogin_telephone_color"
                android:textSize="@dimen/phone_textsize" />

            <EditText
                android:id="@+id/pwd_et"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text2"
                android:background="@null"
                android:hint="密码不能少于6位"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColorHint="@color/newresgin_hintcolor"
                android:textSize="@dimen/phone_textsize" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl2"
            android:background="@color/newresgin_line_color" />
    </RelativeLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_btn_blue"
        android:text="注册"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="50dp"
        android:text="因为版本升级需要，请您使用手机号注册!\n如有疑问请联系客服QQ:3098997562。"
        android:textColor="@color/sunday_txt"
        android:textSize="15sp" />

</LinearLayout>