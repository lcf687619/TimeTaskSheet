<?xml version="1.0" encoding="utf-8"?>    
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:orientation="vertical"  
    android:id="@+id/ll_temp_widget"
    android:gravity="center_vertical"
    android:layout_gravity="center_horizontal"
    android:background="@color/widget_bg"  
    android:layout_width="fill_parent"  
    android:layout_height="fill_parent">  
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:gravity="center"
        android:orientation="vertical"
        >
        <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <TextView 
		  	    android:id="@+id/item_date"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:lines="1"
		        android:text="2014-10-11"
		        android:ellipsize="end"
		        android:gravity="center"
		        android:textColor="@color/white"
		        android:textSize="20sp"
		  	    />
            <TextView 
		  	    android:id="@+id/item_week"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:singleLine="true"
		        android:lines="1"
		        android:text="周六"
		        android:layout_marginLeft="5dp"
		        android:ellipsize="end"
		        android:gravity="center"
		        android:textColor="@color/white"
		        android:textSize="16sp"
		  	    />
        </LinearLayout>
        <TextView 
	  	    android:id="@+id/item_noEndCount"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:lines="1"
	        android:layout_margin="2dp"
	        android:text="过期未结束(0)"
	        android:ellipsize="end"
	        android:gravity="center"
	        android:textColor="#868686"
	        android:textSize="13sp"
	  	    />
    </LinearLayout>    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="#868686"
        />
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="7.4"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_time1"
                android:layout_width="0dp"
                android:layout_weight="3.0"
                android:layout_height="wrap_content"
                android:text="14:30"
                android:gravity="center"
                android:textColor="#868686"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_content1"
                android:layout_width="0dp"
                android:layout_weight="7.0"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="第五杯水：工作"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textColor="#868686"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_time2"
                android:layout_width="0dp"
                android:layout_weight="3.0"
                android:layout_height="wrap_content"
                android:text="16:20"
                android:gravity="center"
                android:textColor="#868686"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_content2"
                android:layout_width="0dp"
                android:layout_weight="7.0"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="五分钟以后提醒我。"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textColor="#868686"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_time3"
                android:layout_width="0dp"
                android:layout_weight="3.0"
                android:layout_height="wrap_content"
                android:text="17:30"
                android:gravity="center"
                android:textColor="#f8710e"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_content3"
                android:layout_width="0dp"
                android:layout_weight="7.0"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="第六杯水：下班"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textColor="#f8710e"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_time4"
                android:layout_width="0dp"
                android:layout_weight="3.0"
                android:layout_height="wrap_content"
                android:text="19:45"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_content4"
                android:layout_width="0dp"
                android:layout_weight="7.0"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="瑜伽"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_time5"
                android:layout_width="0dp"
                android:layout_weight="3.0"
                android:layout_height="wrap_content"
                android:text="22:30"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_content5"
                android:layout_width="0dp"
                android:layout_weight="7.0"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text="第七杯水：睡前半小时"
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_time6"
                android:layout_width="0dp"
                android:layout_weight="3.0"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_content6"
                android:layout_width="0dp"
                android:layout_weight="7.0"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text=""
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_time7"
                android:layout_width="0dp"
                android:layout_weight="3.0"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_content7"
                android:layout_width="0dp"
                android:layout_weight="7.0"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text=""
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="39dp"
            android:gravity="center"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_time8"
                android:layout_width="0dp"
                android:layout_weight="3.0"
                android:layout_height="wrap_content"
                android:text=""
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/tv_content8"
                android:layout_width="0dp"
                android:layout_weight="7.0"
                android:layout_height="wrap_content"
                android:gravity="left|center"
                android:text=""
                android:singleLine="true"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout> 
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        >
        <TextView 
            android:id="@+id/tv_more"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:singleLine="true"
	        android:lines="1"
	        android:text="更多"
	        android:ellipsize="end"
	        android:gravity="center"
	        android:textColor="#868686"
	        android:textSize="13sp"
	  	    />
    </LinearLayout> 
</LinearLayout> 