<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <TextView android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="警告!"
        android:textColor="@color/sunday_txt"
        android:textStyle="bold"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"/>
    <TextView android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv1"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:text="尊敬的用户您好："
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <TextView android:id="@+id/content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv2"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        android:lineSpacingExtra="5dp"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/update_bt"
        android:layout_width="fill_parent"
        android:layout_height="40dip"
        android:layout_below="@id/content_tv"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/shape_btn_blue"
        android:text="上传数据"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView android:id="@+id/exit_tv"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="30dp"
        android:text="继续退出"
        android:textColor="@color/hintcolor"
        android:textSize="18sp"/>
    <TextView android:id="@+id/cancle_tv"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="20dp"
        android:text="取消"
        android:textColor="@color/hintcolor"
        android:textSize="18sp"/>
</RelativeLayout>