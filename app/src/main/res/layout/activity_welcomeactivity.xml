<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/outbackground_ll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/start"
        android:orientation="vertical"
        android:weightSum="11">

        <RelativeLayout
            android:id="@+id/background_rl"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="10"
            android:visibility="gone">

            <RelativeLayout
                android:id="@+id/date_rl"
                android:layout_width="260dp"
                android:layout_height="260dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="50dp">

                <TextView
                    android:id="@+id/month_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="45dp"
                    android:text="今天2月"
                    android:textColor="@color/white"
                    android:textSize="@dimen/qiandao_qiandao" />

                <TextView
                    android:id="@+id/day_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="28"
                    android:textColor="@color/white"
                    android:textSize="80sp" />

                <TextView
                    android:id="@+id/week_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="45dp"
                    android:text="星期二"
                    android:textColor="@color/white"
                    android:textSize="@dimen/qiandao_qiandao" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/jieri_ll"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="80dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/year_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="2016-2-07"
                    android:textColor="@color/white"
                    android:textSize="@dimen/qiandao_jieri" />

                <TextView
                    android:id="@+id/jieri_week_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="周日"
                    android:textColor="@color/white"
                    android:textSize="@dimen/qiandao_jieri" />

                <TextView
                    android:id="@+id/jieri_nongli_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="正月十五"
                    android:textColor="@color/white"
                    android:textSize="@dimen/qiandao_jieri" />

                <TextView
                    android:id="@+id/jieri_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="元宵节"
                    android:textColor="@color/white"
                    android:textSize="@dimen/qiandao_jieri" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:id="@+id/qiandao_ll"
                        android:layout_width="150dp"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/bg_qiandaoworkday"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/qiandaoadd_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:textColor="@color/white"
                            android:textSize="@dimen/qiandao_qiandao" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tiaoguo_tv"
                        android:layout_width="60dp"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:gravity="center"
                        android:text="跳过"
                        android:textColor="@color/white"
                        android:textSize="@dimen/qiandao_tiaoguo" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="下次签到+"
                            android:textColor="@color/white"
                            android:textSize="@dimen/qiandao_tiaoguo" />

                        <TextView
                            android:id="@+id/nextfenshu_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="@dimen/qiandao_tiaoguo" />

                        <TextView
                            android:id="@+id/text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="个积分"
                            android:textColor="@color/white"
                            android:textSize="@dimen/qiandao_tiaoguo" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>