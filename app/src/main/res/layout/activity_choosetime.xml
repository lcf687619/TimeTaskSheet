<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >

    <RelativeLayout
        android:id="@+id/re"
        style="@style/top_banner_two" >

        <LinearLayout
            android:id="@+id/timeset_back"
            style="@style/top_banner_left" >

            <ImageView
                style="@style/image_style"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/btn_back_t" />
        </LinearLayout>

        <TextView
            android:id="@+id/addto_title"
            style="@style/top_banner_center"
            android:text="选择时间"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/timeset_upload"
            style="@style/top_banner_right"
            android:gravity="center"
            android:text="保存"
            android:textColor="@color/dialog_item_text_red"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/re"
        android:background="@color/bg_view" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_below="@id/view"
        android:orientation="horizontal" >

        <com.mission.schedule.view.CycleWheelView
            android:id="@+id/hour_cy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.mission.schedule.view.CycleWheelView>

        <com.mission.schedule.view.CycleWheelView
            android:id="@+id/min_cy"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >
        </com.mission.schedule.view.CycleWheelView>

    </LinearLayout>
