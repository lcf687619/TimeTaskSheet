<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sp="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color" >
    
    <include android:id="@+id/head"
        layout="@layout/activity_repeatfriendsricheng_head"/>
    <ListView android:id="@+id/repeatfriends_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:layout_marginBottom="60dp"
        android:scrollbars="none"
        android:layout_below="@+id/head"></ListView>
    <Button android:id="@+id/addrepeat_bt"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:text="加入我的重复时间"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@color/sunday_txt"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>