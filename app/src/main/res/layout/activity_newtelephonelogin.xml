<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newresgin_background">

    <include
        android:id="@+id/head"
        layout="@layout/activity_resginactivity_head" />
    <View android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/newresgin_line_color"
        android:layout_below="@+id/head"/>

    <RelativeLayout
        android:id="@+id/rl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head_view"
        android:layout_marginTop="30dp"
        android:background="@color/white">
        <View android:id="@+id/phone_view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/newresgin_line_color" />
        <RelativeLayout
            android:id="@+id/rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_below="@+id/phone_view">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="手机号"
                android:textColor="@color/newlogin_telephone_color"
                android:textSize="@dimen/phone_textsize" />

            <EditText
                android:id="@+id/phone_et"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text"
                android:background="@null"
                android:hint="输入手机号"
                android:inputType="number"
                android:maxLength="11"
                android:padding="5dp"
                android:phoneNumber="true"
                android:singleLine="true"
                android:textColorHint="@color/newresgin_hintcolor"

                android:textSize="18sp" />
        </RelativeLayout>

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@color/newresgin_line_color" />
        <RelativeLayout
            android:id="@+id/rl2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/view1"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/text2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="密    码"
                android:textColor="@color/newlogin_telephone_color"
                android:textSize="@dimen/phone_textsize" />

            <EditText
                android:id="@+id/pwd_et"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/text2"
                android:background="@null"
                android:hint="输入密码"
                android:singleLine="true"
                android:paddingLeft="5dp"
                android:textColorHint="@color/newresgin_hintcolor"
                android:textSize="18sp" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/rl2"
            android:background="@color/newresgin_line_color" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/re"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/rl3" >
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:id="@+id/tv_zhuce"
                style="@style/logintext"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center|right"
                android:paddingRight="10dp"
                android:textColor="@color/newresgin_hintcolor"
                android:text="免费注册"
                android:textSize="@dimen/resgin_textsize"/>
            <View android:id="@+id/myview"
                android:layout_width="0.5dp"
                android:layout_height="20dp"
                android:background="@color/newresgin_hintcolor"/>
            <TextView
                android:id="@+id/tv_wangji"
                style="@style/logintext"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:gravity="center|left"
                android:paddingLeft="10dp"
                android:textColor="@color/newresgin_hintcolor"
                android:text="忘记密码"
                android:textSize="@dimen/resgin_textsize"/>
        </LinearLayout>
    </RelativeLayout>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:layout_below="@+id/re"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_newresgin_send"
        android:text="登录"
        android:textColor="#ffffff"
        android:textSize="@dimen/phone_textsize" />
    <TextView android:id="@+id/lijishiyong_tv"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:layout_above="@+id/emaillogin_tv"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="立即试用"
        android:textColor="@color/newresgin_hintcolor"
        android:textSize="@dimen/phone_textsize"
        android:background="@drawable/bg_newresgin_unsend"/>
    <TextView
        android:id="@+id/emaillogin_tv"
        style="@style/logintext"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginBottom="30dp"
        android:textColor="@color/newresgin_hintcolor"
        android:text="邮箱登录"
        android:textSize="@dimen/resgin_textsize"/>
</RelativeLayout>