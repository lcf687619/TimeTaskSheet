<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sp="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/xinjianricheng_bg"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/top_banner_one"
        android:background="@color/white" >

        <LinearLayout
            android:id="@+id/top_ll_back"
            style="@style/top_banner_back" >

            <ImageView
                style="@style/image_style"
                android:background="@mipmap/time_back_lu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/middle_tv"
                style="@style/top_banner_center"
                android:text="闹钟信息"
                android:textColor="@color/black" />
        </LinearLayout>
    </RelativeLayout>

    <ListView
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scrollbars="none" >
    </ListView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="提交闹钟铃声"
        android:gravity="center"
        android:background="@color/white" />

    <ListView
        android:id="@+id/listview1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scrollbars="none" >
    </ListView>

</LinearLayout>