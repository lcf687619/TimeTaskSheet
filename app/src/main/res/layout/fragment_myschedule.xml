<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical"
    tools:context=".fragment.MyScheduleFragment" >

    <LinearLayout
        android:id="@+id/mysch_ll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <include
                android:id="@+id/sch_head"
                layout="@layout/fragment_mysch_head" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <!-- style="@style/swipeXListView_style" -->

            <com.mission.schedule.swipexlistview.SwipeXListView
                android:id="@+id/myschedule_listview"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:divider="@null" />

            <RelativeLayout
                android:id="@+id/tixing_rl"
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:background="@android:color/holo_red_dark"
                android:gravity="center_horizontal" >

                <TextView
                    android:id="@+id/text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="收到的提醒更新"
                    android:textColor="@color/white"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text"
                    android:text="("
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/count_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/text1"
                    android:textColor="@color/white"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/count_tv"
                    android:text=")"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </RelativeLayout>
        </FrameLayout>
    </LinearLayout>

</LinearLayout>