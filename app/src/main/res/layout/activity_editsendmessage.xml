<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/bg_color" >

    <include
        android:id="@+id/head"
        layout="@layout/activity_editsendmessage_head" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/head"
        android:background="@color/bg_color" />

    <RelativeLayout
        android:id="@+id/edit_rl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view"
        android:background="@color/white" >

        <EditText
            android:id="@+id/editmessage_et"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入提醒内容"
            android:minHeight="@dimen/new_detail_h"
            android:padding="15dp"
            android:text=""
            android:textColor="@color/newschcontentcolor"
            android:textColorHint="@color/hintcolor"
            android:textSize="17sp" />
    </RelativeLayout>

    <View
        android:id="@+id/view1"
        style="@style/dialog_item_view"
        android:layout_below="@+id/edit_rl" />

    <TextView
        android:id="@+id/changyongyu_tv"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/new_detail_item_h"
        android:layout_below="@id/view1"
        android:background="#ffffff"
        android:gravity="center_vertical"
        android:padding="15dp"
        android:text="附加信息"
        android:textColor="@color/gongkai_txt"
        android:textSize="@dimen/newschtextsize" />

    <View
        android:id="@+id/view2"
        android:layout_width="fill_parent"
        android:layout_height="10dp"
        android:layout_below="@id/changyongyu_tv"
        android:background="@color/xinjianricheng_dabeijing" />

    <RelativeLayout
        android:id="@+id/ri_rl"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/new_detail_item_h"
        android:layout_below="@+id/view2"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/rili_tv"
            style="@style/addtasktxt"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="日历"
            android:textColor="@color/xinjianricheng_bg"
            android:textSize="@dimen/newschtextsize" />

        <LinearLayout
            android:id="@+id/rili_ll"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/rilibianhua_tv"
                style="@style/addtasktxt"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:text="2014-11-08"
                android:textColor="@color/xinjianricheng_riqi"
                android:textSize="@dimen/newschtextsize" />

            <TextView
                android:id="@+id/newbuild_ymd_state"
                style="@style/addtasktxt"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="3dp"
                android:text=""
                 android:textColor="@color/xinjianricheng_riqi"
                android:textSize="@dimen/newschtextsize" />

            <LinearLayout
                android:id="@+id/date_ll"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/new_add" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

    <View
        android:id="@+id/view3"
        style="@style/dialog_item_view"
        android:layout_below="@+id/ri_rl" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/new_detail_item_h"
        android:layout_below="@+id/view3"
        android:background="#ffffff"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/time_rl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/time_tv"
                style="@style/addtasktxt"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:text=""
                android:textColor="@color/xinjianricheng_riqi"
                android:textSize="@dimen/newschtextsize" />

            <ImageView
                android:id="@+id/timeanniu_imag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:layout_toRightOf="@+id/time_tv"
                android:src="@mipmap/icon_xiajiantou" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tixing_tv"
            style="@style/addtasktxt"
            android:layout_width="0dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="准时提醒"
            android:textColor="@color/xinjianricheng_riqi"
            android:textSize="@dimen/newschtextsize" />

        <LinearLayout
            android:id="@+id/lingsheng_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="5dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <TextView
                style="@style/addtasktxt"
                android:padding="1dp"
                android:text="铃声:"
                android:textColor="@color/xinjianricheng_riqi"
                android:textSize="@dimen/newschtextsize" />

            <TextView
                android:id="@+id/morenlingshen_tv"
                style="@style/addtasktxt"
                android:padding="1dp"
                android:text="完成任务"
                android:textColor="@color/xinjianricheng_riqi"
                android:textSize="@dimen/newschtextsize" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>