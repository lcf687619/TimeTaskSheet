<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- start -->

        <LinearLayout
            android:id="@+id/top_ll"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@null" >

                <LinearLayout
                    android:id="@+id/timeall_ll"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:id="@+id/datebackground_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center_vertical" >

                            <TextView
                                android:id="@+id/timeall_tv_daycount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_centerVertical="true"
                                android:text="今天"
                                android:textColor="@color/white"
                                android:textSize="16sp"
                                 />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/ll_yymm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginTop="2dp"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/timeall_tv_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="01-01"
                                android:textColor="@color/white"
                                android:textSize="15sp"
                                 />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/timeall_tv_week"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:paddingLeft="10dp"
                        android:paddingRight="2dp"
                        android:shadowColor="@color/white"
                        android:shadowDx="10"
                        android:shadowDy="10"
                        android:singleLine="true"
                        android:text="周二"
                        android:textColor="@color/gongkai_txt"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/timeall_tv_nongli"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:shadowColor="@color/white"
                        android:shadowDx="10"
                        android:shadowDy="10"
                        android:singleLine="true"
                        android:text="七月十八"
                        android:textColor="@color/gongkai_txt"
                        android:textSize="14sp" />
                    <TextView
                        android:id="@+id/timeall_after"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginTop="2dp"
                        android:gravity="center"
                        android:paddingLeft="5dp"
                        android:paddingRight="2dp"
                        android:shadowColor="@color/white"
                        android:shadowDx="10"
                        android:shadowDy="10"
                        android:singleLine="true"
                        android:text=""
                        android:textColor="@color/gongkai_txt"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>
            <!-- 右边部分 -->

            <RelativeLayout
                android:id="@+id/timeall_rela_right"
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="20dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="2dp" >

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/bottom_month"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="09-10"
                                android:textColor="@color/mingtian_color"
                                android:textSize="14sp"
                                 />

                            <TextView
                                android:id="@+id/timeall_tv_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="05:25"
                                android:textColor="@color/mingtian_color"
                                android:textSize="@dimen/sch_time"
                                 />

                            <TextView
                                android:id="@+id/bottom_week"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:text="周六"
                                android:textColor="@color/mingtian_color"
                                android:textSize="14sp"
                                 />

                            <TextView
                                android:id="@+id/timeall_tv_shun"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="2dp"
                                android:text="顺"
                                android:textColor="@color/mingtian_color"
                                android:textSize="11sp" />
                        </LinearLayout>
                    </RelativeLayout>

                     <TextView
                        android:id="@+id/timeall_tv_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="5dp"
                        android:lines="2"
                        android:minHeight="@dimen/sch_item_height"
                        android:textColor="@color/richengcontext_txt"
                        android:textSize="@dimen/richengcontent_size" />
                </LinearLayout>

                <TextView
                    android:id="@+id/timeall_tv_lastday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="5dp"
                    android:text="3小时后"
                    android:textColor="@color/gongkai_txt"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/personstate_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginRight="5dp"
                    android:text="已下行"
                    android:textColor="@color/sunday_txt"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/comename_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginBottom="3dp"
                    android:textColor="@color/gongkai_txt"
                    android:textSize="12sp" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- end -->

    <LinearLayout
        android:id="@+id/delete_ll"
        android:layout_width="@dimen/friends_item_80"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:background="#ff5959"
            android:gravity="center"
            android:text="删除"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>