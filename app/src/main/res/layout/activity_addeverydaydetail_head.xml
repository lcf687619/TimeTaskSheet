<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sp="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/xinjianricheng_bg"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/top_banner_one" >

        <LinearLayout
            android:id="@+id/top_ll_back"
            style="@style/top_banner_back" >

            <ImageView
                style="@style/image_style"
                android:background="@mipmap/app_back" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView android:id="@+id/head_title"
                style="@style/top_banner_center"
                android:text="@string/xinjianricheng" />
        </LinearLayout>
		<RelativeLayout
            android:id="@+id/top_ll_right"
            style="@style/top_banner_right" >

            <TextView
                style="@style/image_style"
                android:gravity="center_horizontal"
                android:text="@string/new_build_save"
                android:textColor="#ffffff"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>