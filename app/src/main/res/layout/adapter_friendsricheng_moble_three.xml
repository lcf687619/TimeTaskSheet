<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sp="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

	<LinearLayout
	    android:id="@+id/date_all_three"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

	    <LinearLayout
	        android:id="@+id/datebackground_ll_three"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginTop="40dp"
	        android:orientation="horizontal" >

	        <RelativeLayout
	            android:layout_width="match_parent"
	            android:layout_height="25dp"
	            android:orientation="horizontal" >

	            <TextView
	                android:id="@+id/timeall_tv_daycount_three"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"
	                android:layout_centerHorizontal="true"
	                android:gravity="bottom"
	                android:text="今天"
	                android:textColor="@color/sunday_txt"
	                android:textSize="22sp" />

	            <TextView
	                android:id="@+id/timeall_tv_daycount_text_three"
	                android:layout_width="wrap_content"
	                android:layout_height="match_parent"	                
	                android:layout_toRightOf="@+id/timeall_tv_daycount_three"
	                android:gravity="bottom"
	                android:layout_marginLeft="5dp"
	                android:paddingBottom="2dp"
	                android:text="天后"
	                android:textColor="@color/focus_date_color"
	                android:textSize="14sp" />
	        </RelativeLayout>
	    </LinearLayout>
	</LinearLayout>

    <LinearLayout
        android:id="@+id/bottomitem_ll_three"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="60dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/content_tv_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
           	android:lineSpacingExtra="5dp"
           	android:gravity="center_horizontal"
            android:textColor="@color/richengcontext_txt"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/bg_img_moble_three_all"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp" >

            <RelativeLayout
                android:id="@+id/bg_img_moble_three"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/bg_imgview_moble_three"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
	<View
	    android:id="@+id/bg_view_moble_three_foot"
        android:layout_height="0.5dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#e4e7ef"/>
</LinearLayout>
