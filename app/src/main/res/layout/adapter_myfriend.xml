<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#d8d8d8" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/myfragment_item_height"
            android:orientation="horizontal" >

            <!-- com.lcf.timetasksheet.circleview.CircularImage -->

            <com.mission.schedule.circleview.CircularImage
                android:id="@+id/friend_img"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/friendname_tv"
                style="@style/setpersontext"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="裤裤" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="@dimen/myfragment_item_120"
        android:layout_height="@dimen/myfragment_item_height"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/delete_ll"
            android:layout_width="@dimen/myfragment_item_120"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_richeng"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#55b192"
                android:gravity="center"
                android:text="日程"
                android:textColor="#ffffff"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_delete"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:background="#ff5959"
                android:gravity="center"
                android:text="删除"
                android:textColor="#ffffff"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>