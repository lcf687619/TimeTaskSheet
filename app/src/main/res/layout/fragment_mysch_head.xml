<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/my_schedule_ll_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#ffffff" >

        <LinearLayout
            android:id="@+id/top_ll_left"
            style="@style/top_banner_left" >

            <ImageView
                style="@style/image_style"
                android:src="@mipmap/btn_gengduo" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/myschedule_ll"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/myschedule_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/timefragment_title"
                android:textColor="@color/wodericheng_biaoti"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_more_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/icon_jiantou_xia"
                android:visibility="visible" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/top_ll_right"
            style="@style/top_banner_right" >

            <ImageView android:id="@+id/top_right_iv"
                style="@style/image_style"
                android:src="@mipmap/btn_jia" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>