<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sp="http://schemas.android.com/apk/res-auto"
    xmlns:dslv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_color"
    android:orientation="vertical" >

    <RelativeLayout style="@style/top_banner_two" >

        <LinearLayout
            android:id="@+id/new_dtl_back"
            style="@style/top_banner_back" >

            <ImageView
                style="@style/image_style"
                android:background="@mipmap/time_back_lu" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/myschedule_title"
                style="@style/top_banner_center"
                android:text="分类标签管理"
                android:textColor="@color/black" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/top_ll_right"
            style="@style/top_banner_right" >

            <TextView
                style="@style/image_style"
                android:gravity="center_horizontal"
                android:text="新建"
                android:textColor="@color/sunday_txt"
                android:textSize="17sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#D0D0D0" />

    <com.mobeta.android.dslv.DragSortListView
        android:id="@+id/tag_lv"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:listSelector="#00000000"
        android:dividerHeight="1px"
        dslv:click_remove_id="@id/delete_rl"
        dslv:collapsed_height="1px"
        dslv:drag_enabled="true"
        dslv:drag_handle_id="@id/tuodong_rl"
        dslv:drag_scroll_start="0.33"
        dslv:drag_start_mode="onDown"
        dslv:float_alpha="0.6"
        dslv:remove_enabled="false"
        dslv:remove_mode="clickRemove"
        dslv:slide_shuffle_speed="0.3" />

</LinearLayout>