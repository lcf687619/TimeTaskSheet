<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sp="http://schemas.android.com/apk/res-auto"
    android:id="@+id/myschedule"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/xinjianricheng_dabeijing"
    android:orientation="vertical" >

    <include layout="@layout/activity_basehead" />

   <com.mission.schedule.utils.ReboundScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <View android:layout_width="match_parent"
                android:layout_height="10dp"
                style="@style/dialog_item_view"
                android:background="@color/xinjianricheng_dabeijing" />
			
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/bg_color"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <EditText
                        android:id="@+id/addeverytask_tv"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:background="#ffffff"
                        android:gravity="top|left"
                        android:hint="提醒做什么?"
                        android:minHeight="@dimen/new_detail_h"
                        android:textColor="@color/newschcontentcolor"
                        android:textColorHint="@color/hintcolor"
                        android:textSize="17sp" />
                </LinearLayout>

                <View style="@style/dialog_item_view" />

                <TextView
                    android:id="@+id/qingyingyong_tv"
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:background="#ffffff"
                    android:gravity="center_vertical"
                    android:padding="15dp"
                    android:text="附加信息"
                    android:textColor="@color/gongkai_txt"
                    android:textSize="@dimen/newschtextsize" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/xinjianricheng_dabeijing" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/new_detail_item_h"
                    android:background="#ffffff" >

                    <TextView
                        android:id="@+id/rili_tv"
                        style="@style/addtasktxt"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="15dp"
                        android:text="日历"
                        android:textColor="@color/xinjianricheng_bg"
                        android:textSize="@dimen/newschtextsize" />

                    <LinearLayout
                        android:id="@+id/rili_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:background="#ffffff"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/rilibianhua_tv"
                            style="@style/addtasktxt"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="15dp"
                            android:layout_marginRight="15dp"
                            android:text="2014-11-08"
                            android:textColor="@color/xinjianricheng_riqi"
                            android:textSize="@dimen/newschtextsize" />

                        <TextView
                            android:id="@+id/newbuild_ymd_state"
                            style="@style/addtasktxt"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="3dp"
                            android:text=""
                            android:textColor="@color/xinjianricheng_riqi"
                            android:textSize="@dimen/newschtextsize" />

                        <LinearLayout
                            android:id="@+id/date_ll"
                            android:layout_width="30dp"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:orientation="vertical" >

                            <ImageView
                                android:id="@+id/date_img"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="5dp"
                                android:src="@mipmap/new_add" />
                        </LinearLayout>
                    </LinearLayout>
                </RelativeLayout>

                <View style="@style/dialog_item_view" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/new_detail_item_h"
                    android:background="#ffffff"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        android:id="@+id/time_rl"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/time_tv"
                            style="@style/addtasktxt"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="15dp"
                            android:text="18:50"
                            android:textColor="@color/xinjianricheng_riqi"
                            android:textSize="@dimen/newschtextsize" />

                        <ImageView
                            android:id="@+id/timeanniu_imag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:layout_toRightOf="@+id/time_tv"
                            android:src="@mipmap/icon_xiajiantou" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tixing_tv"
                        style="@style/addtasktxt"
                        android:layout_width="0dp"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:text="准时提醒"
                        android:textColor="@color/xinjianricheng_riqi"
                        android:textSize="@dimen/newschtextsize" />

                    <LinearLayout
                        android:id="@+id/lingsheng_ll"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="5dp"
                        android:gravity="right"
                        android:orientation="horizontal" >

                        <TextView
                            style="@style/addtasktxt"
                            android:padding="1dp"
                            android:text="铃声:"
                            android:textColor="@color/xinjianricheng_riqi"
                            android:textSize="@dimen/newschtextsize" />

                        <TextView
                            android:id="@+id/morenlingshen_tv"
                            style="@style/addtasktxt"
                            android:padding="1dp"
                            android:text="完成任务"
                            android:textColor="@color/xinjianricheng_riqi"
                            android:textSize="@dimen/newschtextsize" />
                    </LinearLayout>
                </LinearLayout>

                <View style="@style/dialog_item_view" />
               
            </LinearLayout>
            <View android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@color/xinjianricheng_dabeijing"/>
        </LinearLayout>
    </com.mission.schedule.utils.ReboundScrollView>

</LinearLayout>